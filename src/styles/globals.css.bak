@tailwind base;
@tailwind components;
@tailwind utilities;

/* Custom global styles below */

html,
body {
  padding: 0;
  margin: 0;
  font-family: 'Inter', ui-sans-serif, system-ui, sans-serif;
  background: #232946;
  color: #E7E7FF;
  min-height: 100%;
}

a {
  color: inherit;
  text-decoration: none;
  transition: color 0.2s;
}

* {
  box-sizing: border-box;
}

button,
input,
select,
textarea {
  font-family: inherit;
}

/* You can add more custom classes or overrides as needed */
